---
import './animations/WishAnimation.astro';
const predefinedWishes = [
  "Growth and success in all endeavors",
  "Innovation and digital transformation",
  "Stronger partnerships and collaboration",
  "Sustainable development and impact"
];
---

<div 
  id="wish-modal"
  class="fixed inset-0 z-50 hidden"
>
  <div class="absolute inset-0 bg-black/75 backdrop-blur-sm"></div>
  
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div class="relative w-full max-w-xl bg-white rounded-2xl p-8">
      <button 
        id="close-wish-modal"
        class="absolute -top-12 right-0 text-white hover:text-gray-300 transition-colors"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Make Your Wish for 2025</h2>
        <p class="text-gray-600">Share your aspirations for the new year</p>
      </div>

      <div class="space-y-6">
        <div>
          <label for="wish" class="block text-sm font-medium text-gray-700 mb-2">Your Wish</label>
          <textarea
            id="wish"
            rows="4"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary resize-none"
            placeholder="Type your wish for 2025..."
          ></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Or choose from our suggestions:</label>
          <div class="grid grid-cols-2 gap-4">
            {predefinedWishes.map(wish => (
              <button
                class="p-3 text-sm text-gray-600 bg-gray-50 rounded-lg hover:bg-primary/5 hover:text-primary transition-colors text-left"
                data-wish={wish}
              >
                {wish}
              </button>
            ))}
          </div>
        </div>

        <button
          id="submit-wish"
          class="w-full px-6 py-4 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-200 font-medium group"
        >
          Send My Wish to the Stars
          <span class="ml-2">✨</span>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  
  
  const createWishEffect = window.createWishEffect;

  // Modal controls
  const modal = document.getElementById('wish-modal');
  const closeBtn = document.getElementById('close-wish-modal');
  const submitBtn = document.getElementById('submit-wish');
  const wishInput = document.getElementById('wish') as HTMLTextAreaElement;

  // Close modal
  const closeModal = () => modal?.classList.add('hidden');
  closeBtn?.addEventListener('click', closeModal);

  // Handle predefined wish selection
  document.querySelectorAll('[data-wish]').forEach(button => {
    button.addEventListener('click', () => {
      const wish = button.getAttribute('data-wish');
      if (wish && wishInput) wishInput.value = wish;
    });
  });

  // Handle wish submission
  submitBtn?.addEventListener('click', async () => {
    if (!wishInput?.value) return;

    // Show particle effect
    await createWishEffect();

    // Update modal content
    if (modal) {
      modal.innerHTML = `
        <div class="absolute inset-0 flex items-center justify-center p-4">
          <div class="bg-white rounded-2xl p-8 text-center max-w-md">
            <div class="text-4xl mb-4">✨</div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Your Wish Has Been Sent!</h3>
            <p class="text-gray-600 mb-8">May 2025 bring you everything you wish for.</p>
            <button
              onclick="document.getElementById('wish-modal').classList.add('hidden')"
              class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
            >
              Close
            </button>
          </div>
        </div>
      `;
    }
  });

  // Close on background click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
</script>