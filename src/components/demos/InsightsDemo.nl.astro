<style>
  @keyframes grow {
    0%, 100% { transform: scaleY(1); opacity: 0.8; }
    50% { transform: scaleY(1.2); opacity: 1; }
  }

  .chart-bar {
    animation-fill-mode: both;
  }

  .insight-card:hover {
    transform: translateY(-2px);
  }

  .document-item:hover {
    transform: translateX(2px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const insightCards = document.querySelectorAll('.insight-card');
    const documentItems = document.querySelectorAll('.document-item');
    
    // Insight card interactivity
    insightCards.forEach(card => {
      card.addEventListener('click', function() {
        insightCards.forEach(c => c.classList.remove('ring-2', 'ring-indigo-500'));
        this.classList.add('ring-2', 'ring-indigo-500');
        
        // Animate chart update
        const chartBars = document.querySelectorAll('.chart-bar');
        chartBars.forEach((bar, index) => {
          bar.style.animation = 'none';
          setTimeout(() => {
            bar.style.animation = `grow 2s ease-in-out infinite ${index * 0.2}s`;
          }, 100);
        });
      });
    });

    // Document item hover effects
    documentItems.forEach(item => {
      item.addEventListener('mouseenter', function() {
        this.style.boxShadow = '0 4px 12px rgba(0,0,0,0.1)';
      });
      
      item.addEventListener('mouseleave', function() {
        this.style.boxShadow = 'none';
      });
    });

    // Auto-cycle through insights
    let currentInsight = 0;
    setInterval(() => {
      insightCards.forEach(c => c.classList.remove('ring-2', 'ring-indigo-500'));
      insightCards[currentInsight].classList.add('ring-2', 'ring-indigo-500');
      currentInsight = (currentInsight + 1) % insightCards.length;
    }, 4000);
  });
</script>