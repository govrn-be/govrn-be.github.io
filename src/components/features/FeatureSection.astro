---
import MeetingDemo from '../demos/MeetingDemo.astro';
import InsightsDemo from '../demos/InsightsDemo.astro';
import GovernanceDemo from '../demos/GovernanceDemo.astro';
import MeetingDemoFR from '../demos/MeetingDemo.fr.astro';
import InsightsDemoFR from '../demos/InsightsDemo.fr.astro';
import GovernanceDemoFR from '../demos/GovernanceDemo.fr.astro';
import MeetingDemoNL from '../demos/MeetingDemo.nl.astro';
import InsightsDemoNL from '../demos/InsightsDemo.nl.astro';
import GovernanceDemoNL from '../demos/GovernanceDemo.nl.astro';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  gradient: string;
  features: Array<{
    title: string;
    description: string;
    icon: string;
    highlight?: boolean;
    link?: string;
  }>;
  image: string;
  imageAlt: string;
  reversed?: boolean;
  demoType?: 'meeting' | 'insights' | 'governance';
}

const { title, subtitle, description, gradient, features, image, imageAlt, reversed = false, demoType } = Astro.props;

// Detect language from URL
const currentUrl = Astro.url.pathname;
const isFrench = currentUrl.startsWith('/fr/');
const isDutch = currentUrl.startsWith('/nl/');
---

<section class="py-32 bg-white relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50/50 to-white/50"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="max-w-3xl mx-auto text-center mb-20">
      <div class={`inline-flex items-center rounded-full px-6 py-2 text-sm font-medium bg-gradient-to-r ${gradient} text-white mb-6`}>
        {subtitle}
      </div>
      <h2 class="text-4xl font-bold text-gray-900 mb-6">{title}</h2>
      <p class="text-xl text-gray-600">{description}</p>
    </div>

    <div class={`grid lg:grid-cols-5 gap-16 items-center ${reversed ? 'lg:grid-flow-dense' : ''}`}>
      <div class={`lg:col-span-2 ${reversed ? 'lg:col-start-4' : ''}`}>
        <div class="grid md:grid-cols-2 gap-4">
          {features.map((feature) => (
            <div class="relative group">
              <div class={`absolute inset-0 bg-gradient-to-r ${gradient} rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl`}></div>
              {feature.link ? (
                <a href={feature.link} class="block">
                  <div class={`relative bg-white rounded-lg p-5 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 ${feature.highlight ? 'ring-2 ring-primary/20' : ''}`}>
                    <div class="text-2xl mb-3">{feature.icon}</div>
                    <h3 class="text-lg font-bold text-gray-900 mb-2 leading-tight">
                      {feature.title}
                    </h3>
                    <p class="text-gray-600 text-sm leading-relaxed mb-3">
                      {feature.description}
                    </p>
                    <div class="text-primary hover:text-primary/90 font-medium inline-flex items-center group text-sm">
                      Learn More
                      <svg class="ml-1 w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </div>
                </a>
              ) : (
                <div class={`relative bg-white rounded-lg p-5 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 ${feature.highlight ? 'ring-2 ring-primary/20' : ''}`}>
                  <div class="text-2xl mb-3">{feature.icon}</div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2 leading-tight">
                    {feature.title}
                  </h3>
                  <p class="text-gray-600 text-sm leading-relaxed">
                    {feature.description}
                  </p>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

      <div class={`lg:col-span-3 ${reversed ? 'lg:col-start-1' : ''}`}>
        <div class="relative group">
          <!-- Demo Container -->
          <div class="relative rounded-2xl p-2 backdrop-blur-sm">
            {demoType === 'meeting' && (
              <>
                {isFrench && <MeetingDemoFR />}
                {isDutch && <MeetingDemoNL />}
                {!isFrench && !isDutch && <MeetingDemo />}
              </>
            )}
            {demoType === 'insights' && (
              <>
                {isFrench && <InsightsDemoFR />}
                {isDutch && <InsightsDemoNL />}
                {!isFrench && !isDutch && <InsightsDemo />}
              </>
            )}
            {demoType === 'governance' && (
              <>
                {isFrench && <GovernanceDemoFR />}
                {isDutch && <GovernanceDemoNL />}
                {!isFrench && !isDutch && <GovernanceDemo />}
              </>
            )}
            {!demoType && (
              <>
                <!-- Decorative backgrounds -->
                <div class="absolute inset-0 bg-gradient-to-br from-gray-100 to-white rounded-2xl"></div>
                <div class={`absolute inset-0 bg-gradient-to-r ${gradient} opacity-10 group-hover:opacity-20 transition-opacity duration-300 rounded-2xl`}></div>
                <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)] rounded-2xl"></div>
                
                <!-- Image container -->
                <div class="max-h-[500px] overflow-hidden rounded-lg">
                  <img 
                    loading="lazy"
                    src={image}
                    alt={imageAlt}
                    class="w-full h-auto object-contain transform group-hover:scale-[1.02] transition-transform duration-300"
                  />
                </div>
                
                <!-- Decorative dots pattern -->
                <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-40"></div>
              </>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>