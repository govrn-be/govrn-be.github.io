<script>
  const form = document.getElementById('summaryForm');

  // Initialize phone input
  let phoneInput;
  if (typeof window !== 'undefined' && window.intlTelInput) {
    phoneInput = window.intlTelInput(document.getElementById('phone'), {
      utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
      preferredCountries: ["be", "fr", "nl", "gb", "ch", "dk"],
      separateDialCode: true,
      initialCountry: "be",
      autoPlaceholder: "aggressive",
      formatOnDisplay: true,
    });

    // Add phone validation
    const phoneElement = document.getElementById('phone');
    const phoneError = document.getElementById('phone-error');
    
    phoneElement?.addEventListener('blur', () => {
      if (phoneInput && phoneInput.isValidNumber()) {
        phoneError?.classList.add('hidden');
      } else {
        phoneError?.classList.remove('hidden');
      }
    });
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Validate phone number if phoneInput is available
    if (phoneInput && !phoneInput.isValidNumber()) {
      const phoneError = document.getElementById('phone-error');
      phoneError?.classList.remove('hidden');
      return;
    }
    
    const formData = new FormData(form as HTMLFormElement);
    const data = {
      firstName: formData.get('firstName'),
      lastName: formData.get('lastName'),
      email: formData.get('email'),
      company: formData.get('company'),
      phone: phoneInput ? phoneInput.getNumber() : formData.get('phone'),
      updates: formData.get('updates') === 'on',
      source: 'governance-summit-summary'
    };

    // Get button reference and original text
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton?.innerHTML;

    try {
