<style>
  .task-card:hover {
    transform: translateY(-2px);
  }

  .access-card:hover {
    transform: translateY(-1px);
  }

  @keyframes pulse-border {
    0%, 100% { border-color: rgba(59, 130, 246, 0.5); }
    50% { border-color: rgba(59, 130, 246, 1); }
  }

  .animate-pulse {
    animation: pulse-border 2s ease-in-out infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const taskCards = document.querySelectorAll('.task-card');
    const accessCards = document.querySelectorAll('.access-card');
    
    // Task card interactivity
    taskCards.forEach(card => {
      card.addEventListener('click', function() {
        taskCards.forEach(c => c.classList.remove('ring-2', 'ring-indigo-500'));
        this.classList.add('ring-2', 'ring-indigo-500');
      });
    });

    // Access card interactivity
    accessCards.forEach(card => {
      card.addEventListener('click', function() {
        accessCards.forEach(c => c.classList.remove('ring-2', 'ring-purple-500'));
        this.classList.add('ring-2', 'ring-purple-500');
        
        // Add subtle animation
        this.style.transform = 'scale(1.02)';
        setTimeout(() => {
          this.style.transform = '';
        }, 200);
      });
    });

    // Auto-highlight different access levels
    let currentAccess = 0;
    setInterval(() => {
      accessCards.forEach(c => c.classList.remove('ring-2', 'ring-purple-500'));
      if (accessCards[currentAccess]) {
        accessCards[currentAccess].classList.add('ring-2', 'ring-purple-500');
      }
      currentAccess = (currentAccess + 1) % accessCards.length;
    }, 3000);
  });
</script>