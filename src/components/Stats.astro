---
import { Image } from 'astro:assets';
import heroManImg from '../assets/images/hero-man.jpg';
import heroWomanImg from '../assets/images/hero-woman.jpg';
import heroGroupImg from '../assets/images/hero-group.jpg';

interface StatsProps {
  stats?: {
    value: string;
    label: string;
    icon: string;
    bgImage: string;
  }[];
}

const {
  stats = [
    {
      value: "93%",
      label: "Of board members feel more confident in their decisions with AI support",
      icon: "üéØ",
      bgImage: heroManImg
    },
    {
      value: "2.5x",
      label: "Faster strategic planning and execution with our collaborative tools",
      icon: "‚ö°",
      bgImage: heroWomanImg
    },
    {
      value: "86%",
      label: "Of boards report improved stakeholder engagement and transparency",
      icon: "ü§ù",
      bgImage: heroGroupImg
    }
  ]
} = Astro.props;
---

<section class="py-12 bg-gradient-to-br from-primary/10 to-secondary/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-10 md:grid-cols-3">
      {stats.map(stat => (
        <div class="relative overflow-hidden rounded-xl bg-primary/5 transition-transform duration-300 hover:scale-[1.02] hover:shadow-2xl">
          <Image 
            loading="lazy" 
            src={stat.bgImage} 
            alt={`Background image illustrating ${stat.label}`}
            class="absolute inset-0 w-full h-full object-cover transform transition-all duration-700 ease-in-out hover:scale-110 brightness-[0.65] contrast-[1.15] saturate-[0.95] hue-rotate-[10deg]"
            width={400}
            height={300}
            quality={85}
          />
          <div class="absolute inset-0 bg-gradient-to-br from-primary/95 via-primary/75 to-primary/60 opacity-75 mix-blend-soft-light"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent opacity-80"></div>
          
          <div class="relative px-5 py-4">
            <div class="inline-flex items-center justify-center w-8 h-8 mb-3 rounded-full bg-white/25 text-lg transition-transform duration-300 hover:scale-110 hover:bg-white/35">
              {stat.icon}
            </div>
            <p class="text-5xl font-bold text-white mb-2 tracking-tight transition-transform duration-300 hover:translate-x-1">{stat.value}</p>
            <p class="text-sm text-white font-medium leading-relaxed transition-colors duration-300 hover:text-white">{stat.label}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>