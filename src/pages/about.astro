        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {offices.map(office => (
            <OfficeCard {...office} />
                
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-br from-primary to-blue-600 py-24">
