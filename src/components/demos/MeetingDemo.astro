---
// Meeting Management Demo Component
---

<div class="relative bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden h-[500px]">
  <!-- Demo Interface -->
  <div class="bg-gradient-to-r from-primary to-blue-600 h-12 flex items-center justify-between px-4">
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
    </div>
    <div class="text-white text-sm font-medium">Board Meeting - Q1 2024</div>
    <div class="text-white/80 text-xs">Live</div>
  </div>

  <div class="flex h-full">
    <!-- Agenda Panel -->
    <div class="w-1/3 bg-gray-50 p-4 border-r border-gray-200">
      <h3 class="text-sm font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        AI-Generated Agenda
      </h3>
      
      <div class="space-y-3">
        <div class="agenda-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-green-500 cursor-pointer hover:shadow-md transition-shadow" data-item="1">
          <div class="flex justify-between items-start mb-2">
            <h4 class="text-sm font-medium text-gray-900">Opening & Attendance</h4>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">5 min</span>
          </div>
          <p class="text-xs text-gray-600">Welcome, roll call, agenda approval</p>
          <div class="flex items-center mt-2">
            <span class="text-xs text-green-600 bg-green-100 px-2 py-0.5 rounded-full">‚úì Completed</span>
          </div>
        </div>

        <div class="agenda-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-blue-500 cursor-pointer hover:shadow-md transition-shadow animate-pulse" data-item="2">
          <div class="flex justify-between items-start mb-2">
            <h4 class="text-sm font-medium text-gray-900">Financial Review Q1</h4>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">15 min</span>
          </div>
          <p class="text-xs text-gray-600">Quarterly results presentation</p>
          <div class="flex items-center mt-2">
            <span class="text-xs text-blue-600 bg-blue-100 px-2 py-0.5 rounded-full">üî¥ Live</span>
          </div>
        </div>

        <div class="agenda-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-gray-300 cursor-pointer hover:shadow-md transition-shadow" data-item="3">
          <div class="flex justify-between items-start mb-2">
            <h4 class="text-sm font-medium text-gray-900">Strategic Initiatives</h4>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">20 min</span>
          </div>
          <p class="text-xs text-gray-600">2024 expansion planning</p>
          <div class="flex items-center mt-2">
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded-full">‚è≥ Upcoming</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-4">
      <div class="mb-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-lg font-semibold text-gray-900">Financial Review Q1 2024</h3>
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
            <span class="text-sm text-gray-600">Recording</span>
          </div>
        </div>
        
        <!-- AI-Generated Minutes Preview -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
          <div class="flex items-start space-x-3">
            <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-sm font-medium text-gray-900 mb-2">AI Assistant - Auto-generating minutes...</h4>
              <div class="text-sm text-gray-700 space-y-1">
                <div class="typing-animation">
                  <span class="typing-text">CFO presented Q1 results showing 15% revenue growth...</span>
                  <span class="cursor">|</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Document Collaboration -->
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <div class="flex items-center justify-between mb-3">
            <h4 class="text-sm font-semibold text-gray-900">Shared Documents</h4>
            <button class="text-sm text-blue-600 hover:text-blue-800 font-medium">+ Add Document</button>
          </div>
          
          <div class="space-y-2">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors cursor-pointer">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-red-100 rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Q1-2024-Financial-Report.pdf</p>
                  <p class="text-xs text-gray-500">Updated 2 mins ago</p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <div class="flex -space-x-2">
                  <div class="w-6 h-6 bg-blue-500 rounded-full border-2 border-white"></div>
                  <div class="w-6 h-6 bg-green-500 rounded-full border-2 border-white"></div>
                  <div class="w-6 h-6 bg-purple-500 rounded-full border-2 border-white"></div>
                </div>
                <span class="text-xs text-gray-500">3 collaborators</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent; }
    50% { border-color: orange; }
  }

  .typing-animation {
    display: flex;
    align-items: center;
  }

  .typing-text {
    overflow: hidden;
    border-right: 2px solid orange;
    white-space: nowrap;
    animation: typing 3s steps(40, end) infinite, blink-caret 0.75s step-end infinite;
  }

  .cursor {
    animation: blink-caret 0.75s step-end infinite;
    color: orange;
  }

  .agenda-item:hover {
    transform: translateX(2px);
    transition: transform 0.2s ease;
  }
</style>

<script>
  // Add interactivity
  document.addEventListener('DOMContentLoaded', function() {
    const agendaItems = document.querySelectorAll('.agenda-item');
    
    agendaItems.forEach(item => {
      item.addEventListener('click', function() {
        // Remove active state from all items
        agendaItems.forEach(i => i.classList.remove('ring-2', 'ring-blue-500'));
        
        // Add active state to clicked item
        this.classList.add('ring-2', 'ring-blue-500');
        
        // Simulate loading new content
        const mainContent = document.querySelector('.flex-1 p-4');
        if (mainContent) {
          mainContent.style.opacity = '0.5';
          setTimeout(() => {
            mainContent.style.opacity = '1';
          }, 300);
        }
      });
    });
  });
</script>