---
import FormSuccess from '../../forms/FormSuccess.astro';

interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`bg-white rounded-2xl p-8 shadow-xl border border-gray-100 ${className}`}>
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-2xl font-bold text-gray-900">Download Our Guidelines</h2>
    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Free Download</span>
  </div>

  <form id="templateAudioForm" class="space-y-6" method="POST">
    <div class="grid grid-cols-2 gap-6">
      <div>
        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
          required
        />
      </div>
      <div>
        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
          required
        />
      </div>
    </div>

    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Professional Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
        placeholder="you@company.com"
        required
      />
      <p id="emailError" class="hidden mt-2 text-sm text-red-600">
        Please enter your professional email address (not Gmail, Hotmail, Yahoo, etc.)
      </p>
    </div>

    <div>
      <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company Name</label>
      <input
        type="text"
        id="company"
        name="company"
        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
        required
      />
    </div>

    <button
      type="submit"
      class="w-full px-6 py-4 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-200 font-medium flex items-center justify-center space-x-2"
    >
      <span>Download Guidelines</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
      </svg>
    </button>

    <div class="flex items-center justify-center space-x-2 text-sm text-gray-500">
      <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <span>Your information is secure and will never be shared</span>
    </div>
  </form>

  <div id="formSuccess" class="hidden">
    <FormSuccess
      title="Your Guidelines Are Ready!"
      message="Thank you for your interest. Click below to download our audio setup guidelines for high-quality board meeting recordings."
    />
    <a
      href="/audio-setup-guide.pdf"
      download="govrn-audio-setup-guide.pdf"
      class="mt-4 w-full px-6 py-4 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-200 font-medium flex items-center justify-center space-x-2"
    >
      <span>Download Now</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
      </svg>
    </a>
  </div>
</div>

<script>
  const form = document.getElementById('templateAudioForm') as HTMLFormElement;
  const success = document.getElementById('formSuccess');
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const emailError = document.getElementById('emailError');

  // List of personal email domains to block
  const personalDomains = [
    'gmail.com', 'googlemail.com',
    'hotmail.com', 'hotmail.co.uk', 'hotmail.fr', 'hotmail.de', 'hotmail.be', 'hotmail.nl',
    'outlook.com', 'outlook.be', 'outlook.fr', 'outlook.de', 'outlook.nl',
    'live.com', 'live.be', 'live.fr', 'live.nl',
    'msn.com',
    'yahoo.com', 'yahoo.co.uk', 'yahoo.fr', 'yahoo.de', 'yahoo.be', 'yahoo.nl',
    'ymail.com',
    'aol.com',
    'icloud.com', 'me.com', 'mac.com',
    'protonmail.com', 'proton.me',
    'mail.com',
    'gmx.com', 'gmx.de', 'gmx.net',
    'zoho.com',
    'yandex.com',
    'tutanota.com',
    'fastmail.com',
    'inbox.com',
    'hey.com',
    'pm.me',
    'telenet.be', 'skynet.be', 'proximus.be', 'scarlet.be',
    'orange.fr', 'free.fr', 'sfr.fr', 'laposte.net', 'wanadoo.fr',
    't-online.de', 'web.de',
    'ziggo.nl', 'kpnmail.nl', 'xs4all.nl'
  ];

  function isPersonalEmail(email: string): boolean {
    const domain = email.toLowerCase().split('@')[1];
    return personalDomains.includes(domain);
  }

  function showEmailError() {
    emailError?.classList.remove('hidden');
    emailInput?.classList.add('border-red-500');
    emailInput?.classList.remove('border-gray-300');
  }

  function hideEmailError() {
    emailError?.classList.add('hidden');
    emailInput?.classList.remove('border-red-500');
    emailInput?.classList.add('border-gray-300');
  }

  emailInput?.addEventListener('input', () => {
    hideEmailError();
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput?.value || '';

    if (isPersonalEmail(email)) {
      showEmailError();
      emailInput?.focus();
      return;
    }

    hideEmailError();
    form.classList.add('hidden');
    success?.classList.remove('hidden');
  });
</script>
