---
import Layout from '../../../layouts/Layout.astro';
import CTA from '../../../components/CTA.astro';

const challenges = [
  {
    title: "Portefeuillebeheer",
    description: "Optimaliseer het toezicht op uw diverse vastgoedportefeuille",
    icon: "🏢"
  },
  {
    title: "Investeringsbeslissingen",
    description: "Neem weloverwogen beslissingen met data-gedreven inzichten",
    icon: "📈"
  },
  {
    title: "Stakeholdercommunicatie", 
    description: "Stroomlijn de interactie met investeerders en partners",
    icon: "💬"
  }
];

const features = [
  {
    title: "Vastgoed Dashboard",
    description: "Real-time monitoring van uw vastgoedprestaties",
    icon: "📊"
  },
  {
    title: "Investeringsanalyse",
    description: "AI-gestuurde evaluatie van investeringskansen",
    icon: "🔍"
  },
  {
    title: "Documentbeheer",
    description: "Beveiligde centrale opslag voor al uw vastgoeddocumentatie",
    icon: "📑"
  }
];

const caseStudies = [
  {
    company: "Care Property Invest",
    logo: "/careproperty-logo.png",
    quote: "Govrn vertegenwoordigt de nieuwe generatie bestuurssoftware, met een perfecte balans tussen gebruiksgemak en AI-integratie.",
    author: "Nathalie Byl",
    role: "Juridisch & Compliance Manager",
    link: "/nl/case-studies/care-property-invest"
  }
];
---

<Layout title="Bestuurssoftware voor Vastgoed | Govrn" description="Optimaliseer uw bestuursprocessen met krachtige tools ontwikkeld voor vastgoedinvestering en -beheer.">
  <main class="pt-16">
    <!-- Hero sectie -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
            Vastgoed
          </div>
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Bestuurssoftware voor de
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              vastgoedsector
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-12">
            Optimaliseer uw bestuursprocessen met krachtige tools specifiek ontwikkeld voor vastgoedinvestering en -beheer.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/nl/try"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
            >
              Gratis proefperiode
            </a>
            <a
              href="/nl/request-demo"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
            >
              Demo aanvragen
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Uitdagingen sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            De uitdagingen die wij aanpakken
          </h2>
          <p class="text-xl text-gray-600">
            Ga de belangrijkste bestuursuitdagingen in de vastgoedsector aan met onze complete oplossing.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {challenges.map(challenge => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{challenge.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{challenge.title}</h3>
              <p class="text-gray-600">{challenge.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Functionaliteiten sectie -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Sectorspecifieke functionaliteiten
          </h2>
          <p class="text-xl text-gray-600">
            Op maat gemaakte functionaliteiten voor bestuursbeheer in vastgoed.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Klantervaringen
          </h2>
          <p class="text-xl text-gray-600">
            Ontdek hoe vastgoedleiders hun bestuur transformeren met Govrn.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {caseStudies.map(study => (
            <a href={study.link} class="group">
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 h-full flex flex-col">
                <div class="flex items-center justify-center h-16 mb-8">
                  <img 
  loading="lazy"
                    src={study.logo}
                    alt={`Logo ${study.company}`}
                    class="h-full object-contain"
                  />
                </div>
                <blockquote class="flex-grow">
                  <p class="text-gray-600 mb-6">« {study.quote} »</p>
                </blockquote>
                <div>
                  <p class="font-medium text-gray-900">{study.author}</p>
                  <p class="text-gray-500">{study.role}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <CTA />
  </main>
</Layout>