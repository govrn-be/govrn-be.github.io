    results: [
      "Personnalisation améliorée des modèles",
      "Meilleur suivi des présences",
      "Solution économique",
      "Support multilingue"
    ],
    images: [
      "/careproperty-building-1.webp",
      "/careproperty-building-2.webp"
    ],
    articleUrl: "/fr/case-studies/care-property-invest",
    industry: "Investissement immobilier",
    location: "Belgique",
    yearFounded: "1995",
    testimonialBy: "Nathalie Byl",
    testimonialRole: "Responsable juridique et conformité"
  }
