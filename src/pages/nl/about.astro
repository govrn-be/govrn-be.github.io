        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {values.map(value => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
              <div class="text-4xl mb-6">{value.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{value.title}</h3>
