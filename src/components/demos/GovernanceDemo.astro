---
// Governance Excellence Demo Component
---

<div class="relative bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden h-[600px]">
  <!-- Demo Header -->
  <div class="bg-gradient-to-r from-indigo-600 to-primary h-12 flex items-center justify-between px-4">
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
      <div class="w-3 h-3 bg-white/30 rounded-full"></div>
    </div>
    <div class="text-white text-sm font-medium">Board Governance Center</div>
    <div class="flex items-center space-x-2">
      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
      <span class="text-white/80 text-xs">All Systems Secure</span>
    </div>
  </div>

  <div class="flex h-full">
    <!-- Task Management Panel -->
    <div class="w-2/5 bg-gradient-to-b from-purple-50 to-indigo-50 p-4 border-r border-purple-200">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold text-gray-900 flex items-center">
          <svg class="w-4 h-4 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          Board Tasks
        </h3>
        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">5 active</span>
      </div>
      
      <div class="space-y-3">
        <div class="task-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-green-500 cursor-pointer hover:shadow-md transition-all" data-status="completed">
          <div class="flex items-start justify-between mb-2">
            <div class="flex items-start space-x-2">
              <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-medium text-gray-900">Quarterly Report Review</h4>
                <p class="text-xs text-gray-600 mt-1">Alice Johnson ‚Ä¢ Due: March 15</p>
              </div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs text-green-600 bg-green-100 px-2 py-0.5 rounded-full">‚úÖ Completed</span>
            <span class="text-xs text-gray-500">2 days ago</span>
          </div>
        </div>

        <div class="task-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-blue-500 cursor-pointer hover:shadow-md transition-all animate-pulse" data-status="in-progress">
          <div class="flex items-start justify-between mb-2">
            <div class="flex items-start space-x-2">
              <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-3 h-3 text-white animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-medium text-gray-900">Board Resolution Signature</h4>
                <p class="text-xs text-gray-600 mt-1">Robert Brown ‚Ä¢ Due: Today</p>
              </div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs text-blue-600 bg-blue-100 px-2 py-0.5 rounded-full">üîÑ In Progress</span>
            <span class="text-xs text-gray-500">6 hours left</span>
          </div>
        </div>

        <div class="task-item bg-white p-3 rounded-lg shadow-sm border-l-4 border-yellow-500 cursor-pointer hover:shadow-md transition-all" data-status="pending">
          <div class="flex items-start justify-between mb-2">
            <div class="flex items-start space-x-2">
              <div class="w-5 h-5 bg-yellow-500 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-medium text-gray-900">Compliance Report</h4>
                <p class="text-xs text-gray-600 mt-1">Emma Wilson ‚Ä¢ Due: March 20</p>
              </div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-xs text-yellow-600 bg-yellow-100 px-2 py-0.5 rounded-full">‚è≥ Pending</span>
            <span class="text-xs text-gray-500">3 days left</span>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="mt-4 pt-4 border-t border-purple-200">
        <h4 class="text-xs font-semibold text-gray-700 mb-3">Quick Actions</h4>
        <div class="space-y-2">
          <button class="quick-action w-full text-left p-2 bg-white rounded-lg hover:bg-purple-50 transition-colors border border-purple-100 flex items-center space-x-2">
            <div class="w-6 h-6 bg-purple-100 rounded flex items-center justify-center">
              <svg class="w-3 h-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <span class="text-xs font-medium text-gray-700">Create New Task</span>
          </button>
          <button class="quick-action w-full text-left p-2 bg-white rounded-lg hover:bg-purple-50 transition-colors border border-purple-100 flex items-center space-x-2">
            <div class="w-6 h-6 bg-indigo-100 rounded flex items-center justify-center">
              <svg class="w-3 h-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
            </div>
            <span class="text-xs font-medium text-gray-700">E-Signature Request</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Main Governance Dashboard -->
    <div class="flex-1 p-4">
      <div class="mb-4">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Governance Overview</h3>
          <div class="flex items-center space-x-2">
            <div class="flex items-center space-x-1">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-xs text-gray-600">100% Compliant</span>
            </div>
          </div>
        </div>
        
        <!-- Role-Based Access Control Visualization -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg p-4 mb-4">
          <h4 class="text-sm font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Access Control Matrix
          </h4>
          
          <div class="grid grid-cols-3 gap-4">
            <div class="access-role bg-white p-3 rounded-xl shadow-lg border-2 border-purple-200 hover:border-purple-400 transition-all duration-300 cursor-pointer hover:shadow-xl hover:-translate-y-1" data-role="admin">
              <div class="flex flex-col items-center text-center space-y-2">
                <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-bold text-gray-900">Admin</p>
                  <p class="text-xs text-purple-600 font-medium">Full Control</p>
                </div>
                <div class="w-full">
                  <div class="w-full bg-purple-200 rounded-full h-2">
                    <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-2 rounded-full shadow-sm" style="width: 100%"></div>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">100% Access</p>
                </div>
              </div>
            </div>

            <div class="access-role bg-white p-3 rounded-xl shadow-lg border-2 border-blue-200 hover:border-blue-400 transition-all duration-300 cursor-pointer hover:shadow-xl hover:-translate-y-1" data-role="member">
              <div class="flex flex-col items-center text-center space-y-2">
                <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-bold text-gray-900">Member</p>
                  <p class="text-xs text-blue-600 font-medium">Board Access</p>
                </div>
                <div class="w-full">
                  <div class="w-full bg-blue-200 rounded-full h-2">
                    <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full shadow-sm" style="width: 80%"></div>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">80% Access</p>
                </div>
              </div>
            </div>

            <div class="access-role bg-white p-3 rounded-xl shadow-lg border-2 border-gray-200 hover:border-gray-400 transition-all duration-300 cursor-pointer hover:shadow-xl hover:-translate-y-1" data-role="observer">
              <div class="flex flex-col items-center text-center space-y-2">
                <div class="w-12 h-12 bg-gradient-to-r from-gray-400 to-gray-600 rounded-full flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-bold text-gray-900">Observer</p>
                  <p class="text-xs text-gray-600 font-medium">View Only</p>
                </div>
                <div class="w-full">
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-gradient-to-r from-gray-500 to-gray-600 h-2 rounded-full shadow-sm" style="width: 40%"></div>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">40% Access</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Digital Signatures Status -->
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <div class="flex items-center justify-between mb-3">
            <h4 class="text-sm font-semibold text-gray-900 flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
              Digital Signature Requests
            </h4>
            <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">2 Pending</span>
          </div>
          
          <div class="space-y-3">
            <div class="signature-item flex items-center justify-between p-3 bg-gradient-to-r from-green-50 to-transparent rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Board Resolution #2024-001</p>
                  <p class="text-xs text-gray-500">Signed by Alice Johnson ‚Ä¢ 2 hours ago</p>
                </div>
              </div>
              <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded-full">‚úÖ Signed</span>
            </div>

            <div class="signature-item flex items-center justify-between p-3 bg-gradient-to-r from-blue-50 to-transparent rounded-lg animate-pulse">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">Quarterly Approval</p>
                  <p class="text-xs text-gray-500">Awaiting signature from Robert Brown</p>
                </div>
              </div>
              <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">‚úçÔ∏è Pending</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .task-item:hover {
    transform: translateY(-1px);
  }

  .access-role:hover {
    transform: scale(1.02);
  }

  .quick-action:hover {
    transform: translateX(2px);
  }

  .signature-item:hover {
    transform: translateX(2px);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const taskItems = document.querySelectorAll('.task-item');
    const accessRoles = document.querySelectorAll('.access-role');
    const quickActions = document.querySelectorAll('.quick-action');
    
    // Task item interactivity
    taskItems.forEach(task => {
      task.addEventListener('click', function() {
        taskItems.forEach(t => t.classList.remove('ring-2', 'ring-purple-500'));
        this.classList.add('ring-2', 'ring-purple-500');
        
        // Simulate task detail loading
        const taskDetail = this.querySelector('.text-xs.text-gray-500');
        if (taskDetail) {
          taskDetail.style.opacity = '0.5';
          setTimeout(() => {
            taskDetail.style.opacity = '1';
          }, 300);
        }
      });
    });

    // Access role hover effects
    accessRoles.forEach(role => {
      role.addEventListener('click', function() {
        accessRoles.forEach(r => r.classList.remove('ring-2', 'ring-indigo-500'));
        this.classList.add('ring-2', 'ring-indigo-500');
        
        // Animate progress bar
        const progressBar = this.querySelector('.bg-purple-500, .bg-blue-500, .bg-green-500, .bg-gray-500');
        if (progressBar) {
          progressBar.style.transform = 'scaleX(0)';
          setTimeout(() => {
            progressBar.style.transform = 'scaleX(1)';
            progressBar.style.transition = 'transform 0.5s ease';
          }, 100);
        }
      });
    });

    // Quick action clicks
    quickActions.forEach(action => {
      action.addEventListener('click', function() {
        // Add ripple effect
        this.style.transform = 'scale(0.98)';
        setTimeout(() => {
          this.style.transform = 'scale(1)';
        }, 150);
        
        // Show success feedback
        const text = this.querySelector('span');
        const originalText = text.textContent;
        text.textContent = 'Action completed!';
        text.classList.add('text-green-600');
        setTimeout(() => {
          text.textContent = originalText;
          text.classList.remove('text-green-600');
        }, 2000);
      });
    });

    // Auto-highlight different roles every few seconds
    let currentRole = 0;
    setInterval(() => {
      accessRoles.forEach(r => r.classList.remove('ring-2', 'ring-indigo-500'));
      if (accessRoles[currentRole]) {
        accessRoles[currentRole].classList.add('ring-2', 'ring-indigo-500');
      }
      currentRole = (currentRole + 1) % accessRoles.length;
    }, 4000);
  });
</script>