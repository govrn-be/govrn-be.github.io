---
interface Props {
  name: string;
  role: string;
  image: string;
  bio: string;
  linkedin: string;
}

const { name, role, image, bio, linkedin } = Astro.props;
---

<div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
  <div class="relative mb-6">
    <img
      src={image}
      alt={name}
      class="w-full h-64 object-cover rounded-lg"
    />
    <a
      href={linkedin}
      target="_blank"
      rel="noopener noreferrer"
      class="absolute bottom-4 right-4 bg-white p-2 rounded-full shadow-lg hover:scale-110 transition-transform duration-200"
    >
      <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
    </a>
  </div>
  <h3 class="text-xl font-bold text-gray-900 mb-2">{name}</h3>
  <p class="text-primary font-medium mb-4">{role}</p>
  <p class="text-gray-600">{bio}</p>
</div>