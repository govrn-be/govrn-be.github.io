---
import Layout from '../../../layouts/Layout.astro';
import CTA from '../../../components/CTA.astro';

const regulations = [
  {
    name: "CSRD",
    description: "Richtlijn voor duurzaamheidsrapportage en ESG-verslaglegging",
    impact: "Verplichte ESG-rapportage",
    deadline: "2024-2025"
  },
  {
    name: "Basel IV",
    description: "Aangescherpte kapitaaleisen en risicobeheerstandaarden",
    impact: "Herziening kapitaalallocatie",
    deadline: "2025"
  },
  {
    name: "AVG",
    description: "Privacywetgeving ter bescherming van Europese burgers",
    impact: "Databeveiliging",
    deadline: "Doorlopend"
  }
];

const challenges = [
  {
    title: "Regelgeving & Compliance",
    description: "Beheers complexe regelgeving zoals CSRD, Basel IV en AVG met onze AI-gestuurde compliance monitoring",
    icon: "⚖️"
  },
  {
    title: "Risicobeheer",
    description: "Real-time risicobeoordeling en mitigatiestrategieën met automatische regelgevingsupdates",
    icon: "🛡️"
  },
  {
    title: "ESG-rapportage",
    description: "Complete ESG-monitoring en rapportagemogelijkheden voor CSRD-compliance",
    icon: "🌱"
  },
  {
    title: "Databeveiliging",
    description: "Bankwaardige beveiliging voor gevoelige bestuurscommunicatie en regelgevingsdocumentatie",
    icon: "🔒"
  }
];

const features = [
  {
    title: "Regelgevingsintelligentie",
    description: "AI-gedreven monitoring van regelgevingswijzigingen met automatische impactanalyse",
    icon: "🤖"
  },
  {
    title: "ESG-dashboard",
    description: "Real-time monitoring van duurzaamheidsmetrieken en CSRD-compliance",
    icon: "📊"
  },
  {
    title: "Compliance-automatisering",
    description: "Geautomatiseerde tracking van regelgevingsvereisten en deadlines",
    icon: "⚡"
  },
  {
    title: "Veilig documentbeheer",
    description: "Opslag en delen van gevoelige documenten met end-to-end encryptie",
    icon: "📑"
  },
  {
    title: "Audit trail",
    description: "Volledige traceerbaarheid van alle bestuursactiviteiten en -besluiten",
    icon: "📋"
  }
];

const caseStudies = [
  {
    company: "Finance & Invest Brussels",
    logo: "/fib-logo.png",
    quote: "Govrn heeft ons documentbeheer aanzienlijk vereenvoudigd, waardoor onze vergadervoorbereidingen efficiënter zijn en we regelgevingswijzigingen beter kunnen anticiperen.",
    author: "Pierre Hermant",
    role: "Algemeen Directeur",
    link: "/nl/case-studies/finance-invest-brussels"
  }
];
---

<Layout title="Bestuurssoftware voor Financiële Dienstverlening | Govrn" description="Beheer uw regelgevingsverplichtingen waaronder CSRD, Basel IV en AVG effectief met onze AI-gestuurde compliance monitoring.">
  <main class="pt-16">
    <!-- Hero sectie -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
            Financiële dienstverlening
          </div>
          <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
            Bestuurssoftware voor
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              financiële instellingen
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-12">
            Geef uw bestuur de veilige en compliant tools die speciaal zijn ontwikkeld voor financiële instellingen. Anticipeer op veranderende regelgeving zoals CSRD en Basel IV.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/nl/try"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
            >
              Gratis proefperiode
            </a>
            <a
              href="/nl/request-demo"
              class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
            >
              Demo aanvragen
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Regelgeving sectie -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Anticipeer op regelgevingsveranderingen
          </h2>
          <p class="text-xl text-gray-600">
            Navigeer door een voortdurend veranderend regelgevingslandschap met onze AI-analyses en geautomatiseerde compliance monitoring.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {regulations.map(reg => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-xl font-bold text-primary">{reg.name}</h3>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary/10 text-primary">
                  {reg.deadline}
                </span>
              </div>
              <p class="text-gray-600 mb-4">{reg.description}</p>
              <div class="text-sm font-medium text-gray-500">Impact: {reg.impact}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Uitdagingen sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            De uitdagingen die wij aanpakken
          </h2>
          <p class="text-xl text-gray-600">
            Adresseer de belangrijkste uitdagingen voor besturen in de financiële sector met onze complete oplossing.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {challenges.map(challenge => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{challenge.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{challenge.title}</h3>
              <p class="text-gray-600">{challenge.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Functionaliteiten sectie -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Sectorspecifieke functionaliteiten
          </h2>
          <p class="text-xl text-gray-600">
            Functionaliteiten op maat ontwikkeld voor bestuursbeheer in financiële dienstverlening.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Cases sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Klantcases
          </h2>
          <p class="text-xl text-gray-600">
            Ontdek hoe toonaangevende financiële instellingen hun governance transformeren met Govrn.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {caseStudies.map(study => (
            <a href={study.link} class="group">
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 h-full flex flex-col">
                <div class="flex items-center justify-center h-16 mb-8">
                  <img 
  loading="lazy"
                    src={study.logo}
                    alt={`Logo ${study.company}`}
                    class="h-full object-contain"
                  />
                </div>
                <blockquote class="flex-grow">
                  <p class="text-gray-600 mb-6">"{study.quote}"</p>
                </blockquote>
                <div>
                  <p class="font-medium text-gray-900">{study.author}</p>
                  <p class="text-gray-500">{study.role}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <CTA />
  </main>
</Layout>