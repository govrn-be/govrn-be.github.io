---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  structuredData?: object;
  headerTransparent?: boolean;
  hideMenu?: boolean;
  whiteLogo?: boolean;
}

const {
  title,
  description = "Govrn - Simplify Board Management Like Never Before. A smart platform to centralize your documents, automate tasks, and enhance collaboration.",
  image = "/default_sharing_meta.jpg",
  structuredData = null,
  headerTransparent = false,
  hideMenu = false,
  whiteLogo = false,
} = Astro.props;
// remove .html in pathname
const canonicalPath = Astro.url.pathname.replace(/\.html$/, '');
const canonicalUrl = new URL(canonicalPath, Astro.site);
const url = canonicalUrl.href;
const organisationStructuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Govrn",
  "url": "https://govrn.com",
  "logo": "https://govrn.com/logo.webp",
  "description": "Govrn is a smart platform to centralize your documents, automate tasks, and enhance collaboration.",
  "email": "info@govrn.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Av. Roger Vandendriessche 18",
    "addressLocality": "Brussels",
    "addressCountry": "BE",
    "addressRegion": "Brussels",
    "postalCode": "1150"
  },
  "sameAs": [
    "https://www.linkedin.com/company/govrncorp/",
    "https://twitter.com/govrncorp"
  ],
  "vatID": "BE0761625687",
};
const currentLang = canonicalPath.startsWith('/fr/') || canonicalPath.endsWith('/fr') 
  ? 'fr' 
  : canonicalPath.startsWith('/nl/') || canonicalPath.endsWith('/nl') 
    ? 'nl' 
    : 'en';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script src="https://tag.clearbitscripts.com/v1/pk_3e1d6d2934e384070f62039bb4f4efe6/tags.js" referrerpolicy="strict-origin-when-cross-origin"></script>
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify(organisationStructuredData)}></script>
    {structuredData && <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <link rel="canonical" href={url} />


    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Start of HubSpot Embed Code -->
    <script
      type="text/javascript"
      id="hs-script-loader"
      async
      defer
      src="//js-eu1.hs-scripts.com/144285821.js"></script>
    <!-- End of HubSpot Embed Code -->
    <!-- Global site tag (gtag.js) - Google Analytics -->
  </head>
  <body class="min-h-screen bg-white relative">
    <Header transparent={headerTransparent} hideMenu={hideMenu} whiteLogo={whiteLogo} currentLang={currentLang} />
    <slot />
    <Footer currentLang={currentLang} />
    
    <CookieBanner />

    <!-- Sticky Trial Button -->
    <a
      href={currentLang === 'fr' ? '/fr/try' : currentLang === 'nl' ? '/nl/try' : '/try'}
      class="z-1000 fixed top-2 right-8 z-40 px-6 py-4 text-base font-semibold rounded-full text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300 flex items-center gap-3 group hover:scale-105 active:scale-95"
    >
      <svg 
        class="w-5 h-5" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      <span>{currentLang === 'fr' ? 'Essayer gratuitement' : currentLang === 'nl' ? 'Gratis proberen' : 'Try for Free'}</span>
      <svg 
        class="w-4 h-4 transform group-hover:translate-x-1.5 transition-transform duration-300" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>


    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-ML9SBCS"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
  </body>
</html>

<style is:global>
  :root {
    --accent: 37, 99, 235;
    --accent-light: 96, 165, 250;
    --accent-dark: 30, 58, 138;
  }
  html {
    font-family: "Inter", system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
  }
</style>
