---
interface Props {
  industry: string;
  icon: string;
  name: string;
  description: string;
}

const { industry, icon, name, description } = Astro.props;

// Industry-specific hero content
const heroContent = {
  'financial-services': {
    title: "Transform Financial Services Board Administration",
    subtitle: "with AI-Powered Compliance Tools",
    image: "/finance.jpg",
    imageAlt: "Financial Services Board Meeting Room"
  },
  'healthcare': {
    title: "Streamline Healthcare Board Documentation",
    subtitle: "with HIPAA-Compliant Tools",
    image: "/healthcare.jpg",
    imageAlt: "Healthcare Board Meeting Room"
  },
  'real-estate': {
    title: "Optimize Real Estate Board Management",
    subtitle: "with Portfolio-Focused Tools",
    image: "/realestate.jpg",
    imageAlt: "Real Estate Portfolio Management Dashboard"
  }
};

const content = heroContent[industry] || {
  title: `Streamline ${name} Board Administration`,
  subtitle: "with Intelligent Tools",
  image: "/realestate.jpg",
  imageAlt: `${name} Board Management Platform Interface`
};
---

<section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div>
        <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
          <span class="mr-2">{icon}</span>
          {name} Board Secretary Solutions
        </div>
        <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
          {content.title}
          <span class="block mt-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
            {content.subtitle}
          </span>
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed mb-12">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
          >
            Request Demo
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
          >
            Contact Sales
          </a>
        </div>
      </div>
      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-transparent rounded-3xl transform rotate-3"></div>
        <img
          src={content.image}
          alt={content.imageAlt}
          class="relative rounded-2xl shadow-2xl object-cover h-[500px] w-full"
        />
      </div>
    </div>
  </div>
</section>
