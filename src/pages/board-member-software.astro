---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import FAQ from "../components/FAQ.astro";
import CTA from "../components/CTA.astro";
import { Image } from 'astro:assets';
import applicationHomePageImg from '../assets/images/application-home-page.png';
import sharepointLogoImg from '../assets/images/sharepoint-logo.png';
import googleDriveLogoImg from '../assets/images/google-drive-logo.png';
import dropboxLogoImg from '../assets/images/dropbox-logo.png';
import oneDriveLogoImg from '../assets/images/onedrive-logo.png';
import diligentLogoImg from '../assets/images/diligent-logo.png';

const boardMemberFaqs = [
  {
    question: "Do I keep access to my documents if I leave a board?",
    answer: "Yes — your Govrn One archive remains yours, even after your mandate ends."
  },
  {
    question: "Can Govrn One work with multiple boards at the same time?",
    answer: "Absolutely. Govrn One was designed to centralize documents across all your boards in one place."
  },
  {
    question: "How secure is Govrn One?",
    answer: "Govrn One is EU hosted, with enterprise-grade encryption and GDPR compliance. Your documents remain private and secured."
  },
  {
    question: "What makes Govrn One different from Govrn and other board management platforms?",
    answer: "Govrn and other board management platforms are built for the organization. Govrn One is built for the individual board member - it's your personal board workspace."
  }
];

const productStructuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Govrn One",
  "applicationCategory": "BusinessApplication",
  "description": "Personal board member software, EU hosted & secured. Unlike Govrn which serves organizations, Govrn One is built for individual board members to centralize documents from all their boards, prepare with AI, and keep their archive forever.",
  "operatingSystem": "Web",
  "url": "https://govrn.com/board-member-software",
  "offers": {
    "@type": "Offer",
    "url": "https://govrn.com/request-demo",
    "availability": "https://schema.org/InStock"
  },
  "featureList": [
    "Personal board portal & document management",
    "AI-powered meeting preparation for individual board members",
    "Permanent document archive across multiple boards",
    "Board member profile insights",
    "EU-hosted with enterprise-grade security"
  ]
};

const combinedStructuredData = [productStructuredData];
---

<Layout
  title="Govrn One — Secured EU Hosted Board Member Software"
  description="Personal board member software, EU hosted & secured. Centralize documents from all your boards, prepare with AI, and keep your archive forever."
  structuredData={combinedStructuredData}
>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <Hero
      badgeText="Personal board member software"
      heading={{
        main: "Board member software — built for you,",
        highlight: "not your board"
      }}
      description="Govrn One is the first personal board member software, fully EU-hosted and secured. Unlike Govrn which serves organizations, or traditional board portals built for companies, Govrn One gives you your own personal board portal: a space to centralize documents, prepare with AI insights, and keep your archive forever — across all your boards."
      ctaButtons={{
        primary: {
          text: "Request early access",
          href: "#board-member-software-form"
        },
        secondary: {
          text: "Watch video"
        }
      }}
      securityFeatures={[
        {
          title: "EU",
          subtitle: "Hosted"
        },
        {
          title: "GDPR",
          subtitle: "Compliant"
        },
        {
          title: "256-bit",
          subtitle: "Encryption"
        }
      ]}
      imageAlt="Govrn One personal board member software interface"
      imageSrc={applicationHomePageImg}
    />

    <!-- Govrn vs Govrn One Comparison -->
    <section class="py-16 bg-white border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-sm font-semibold text-primary uppercase tracking-wide">New product</p>
          <h2 class="mt-2 text-2xl font-bold text-gray-900">Govrn vs Govrn <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">One</span></h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Govrn -->
          <div class="bg-gray-50 p-6 rounded-xl">
            <div class="text-center">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Govrn</h3>
              <p class="text-sm text-gray-600 mb-4">For organizations</p>
              <div class="space-y-3 text-left">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Board management for companies</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Organizational document control</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Data belongs to the company</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Govrn One -->
          <div class="bg-primary/5 p-6 rounded-xl border-2 border-primary/20">
            <div class="text-center">
              <h3 class="text-xl font-semibold text-primary mb-2">Govrn <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">One</span></h3>
              <p class="text-sm text-primary/70 mb-4">For Individual Board Members</p>
              <div class="space-y-3 text-left">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-primary mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Personal workspace across all boards</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-primary mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Your documents, your control</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-primary mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-gray-700">Lifetime archive, even after mandates</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Integrations Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Connects to all your board platforms
          </h2>
          <p class="mt-4 max-w-3xl mx-auto text-xl text-gray-600">
            Govrn One automatically syncs with the platforms your boards already use, bringing all your documents into one personal workspace.
          </p>
        </div>

        <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-center">
          <!-- SharePoint -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-3 bg-white shadow-sm">
              <Image
                src={sharepointLogoImg}
                alt="SharePoint"
                class="w-10 h-10 object-contain"
                width={40}
                height={40}
              />
            </div>
            <span class="text-sm font-semibold text-gray-900">SharePoint</span>
          </div>

          <!-- Google Drive -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-3 bg-white shadow-sm">
              <Image
                src={googleDriveLogoImg}
                alt="Google Drive"
                class="w-10 h-10 object-contain"
                width={40}
                height={40}
              />
            </div>
            <span class="text-sm font-semibold text-gray-900">Google Drive</span>
          </div>

          <!-- Diligent -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-3 bg-white shadow-sm">
              <Image
                src={diligentLogoImg}
                alt="Diligent"
                class="w-10 h-10 object-contain"
                width={40}
                height={40}
              />
            </div>
            <span class="text-sm font-semibold text-gray-900">Diligent</span>
          </div>

          <!-- Other BMS -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-3">
              <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 11H7v3h2v-3zm4 0h-2v3h2v-3zm4 0h-2v3h2v-3zm2-7h-1V2h-2v2H8V2H6v2H5c-1.1 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
              </svg>
            </div>
            <span class="text-sm font-semibold text-gray-900">Other BMS</span>
          </div>

          <!-- Email -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center mb-3">
              <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </div>
            <span class="text-sm font-semibold text-gray-900">Email</span>
          </div>

          <!-- Dropbox -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-3 bg-white shadow-sm">
              <Image
                src={dropboxLogoImg}
                alt="Dropbox"
                class="w-10 h-10 object-contain"
                width={40}
                height={40}
              />
            </div>
            <span class="text-sm font-semibold text-gray-900">Dropbox</span>
          </div>

          <!-- OneDrive -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-3 bg-white shadow-sm">
              <Image
                src={oneDriveLogoImg}
                alt="OneDrive"
                class="w-8 h-8 object-contain"
                width={32}
                height={32}
              />
            </div>
            <span class="text-sm font-semibold text-gray-900">OneDrive</span>
          </div>

          <!-- Plus More -->
          <div class="flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="w-12 h-12 bg-gray-400 rounded-lg flex items-center justify-center mb-3">
              <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
              </svg>
            </div>
            <span class="text-sm font-semibold text-gray-900">+ More</span>
          </div>
        </div>

        <div class="mt-12 text-center">
          <p class="text-lg text-gray-600">
            <span class="font-semibold">Automatic synchronization</span> — Set it once, and Govrn One keeps everything up to date across all your board positions.
          </p>
        </div>
      </div>
    </section>

    <!-- Personal Board Portal Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Your personal board portal & document management
          </h2>
          <p class="mt-4 max-w-3xl mx-auto text-xl text-gray-600">
            Stop losing time in email threads. Govrn One automatically collects your board documents, agendas, and attachments from different boards and rebuilds them into a clear structure of meetings and events.
          </p>
        </div>

        <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">Automatic board member document management</h3>
            <p class="mt-2 text-gray-600">Unlike Govrn which organizes for companies, Govrn One organizes for you personally across all your boards</p>
          </div>

          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">Clean timeline of meetings & decisions</h3>
            <p class="mt-2 text-gray-600">Track the evolution of decisions across all your board positions</p>
          </div>

          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">One private space, just for you</h3>
            <p class="mt-2 text-gray-600">Your personal board workspace, completely independent from Govrn or any organization</p>
          </div>
        </div>
      </div>
    </section>

    <!-- AI Preparation Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
          <div>
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
              Get prepared for board meetings with AI
            </h2>
            <p class="mt-4 text-xl text-gray-600">
              No need to read hundreds of pages. Govrn One's AI reviews your documents, regulations, and reports to surface what matters most for your responsibilities as a board member.
            </p>

            <div class="mt-8 space-y-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-8 h-8 bg-primary/10 rounded-lg">
                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Smart summaries of lengthy documents</h3>
                  <p class="mt-1 text-gray-600">AI-powered insights help you focus on what matters most</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-8 h-8 bg-primary/10 rounded-lg">
                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">Compliance & regulation highlights</h3>
                  <p class="mt-1 text-gray-600">Stay on top of regulatory requirements automatically</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-8 h-8 bg-primary/10 rounded-lg">
                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900">AI insights for board members to support decision-making</h3>
                  <p class="mt-1 text-gray-600">Make better informed decisions with contextual intelligence</p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 lg:mt-0">
            <Image
              src={applicationHomePageImg}
              alt="AI-powered board meeting preparation interface"
              class="rounded-lg shadow-xl"
              width={600}
              height={400}
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Archive Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Keep your board archive — even after your mandate
          </h2>
          <p class="mt-4 max-w-3xl mx-auto text-xl text-gray-600">
            Your knowledge doesn't end when your mandate does. Govrn One ensures your documents and notes remain yours, so you build your personal board archive over time.
          </p>
        </div>

        <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">Permanent access to your data</h3>
            <p class="mt-2 text-gray-600">Your board documents remain accessible regardless of organizational changes</p>
          </div>

          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">A lifetime archive of your board work</h3>
            <p class="mt-2 text-gray-600">Build a comprehensive record of your governance experience</p>
          </div>

          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto bg-primary/10 rounded-lg">
              <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="mt-6 text-lg font-semibold text-gray-900">Your personal governance library</h3>
            <p class="mt-2 text-gray-600">Create a valuable knowledge base for future board positions</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Board Insights Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Know your boards & spot conflicts of interest
          </h2>
