---
import Layout from '../../../layouts/Layout.astro';

const features = [
  {
    icon: "🔒",
    title: "End-to-end versleuteling",
    description: "Berichten en bestanden worden volledig versleuteld van verzender naar ontvanger voor maximale vertrouwelijkheid",
    benefits: [
      "Zero-knowledge architectuur",
      "Militair-grade versleuteling",
      "Geen berichtopslag op servers",
      "Veilig sleutelbeheer"
    ]
  },
  {
    icon: "💬",
    title: "Beveiligde berichtgeving",
    description: "Veilige instant messaging voor vertrouwelijke bestuurscommunicatie",
    benefits: [
      "Persoonlijke berichten",
      "Groepsdiscussies", 
      "Automatisch verwijderende berichten"
    ]
  },
  {
    icon: "📂",
    title: "Beveiligd bestandsdelen",
    description: "Deel gevoelige documenten met nauwkeurige toegangscontrole",
    benefits: [
      "End-to-end versleutelde overdracht",
      "Toegangslogboek",
      "Versiebeheer",
      "Tijdelijke deellinks"
    ]
  }
];

const communicationTools = [
  {
    title: "Bestuursmessaging platform",
    description: "Beveiligd berichtenplatform specifiek ontworpen voor bestuurscommunicatie",
    icon: "💬",
    capabilities: [
      {
        title: "Direct messaging",
        description: "Real-time versleutelde communicatie tussen leden"
      },
      {
        title: "Groepskanalen",
        description: "Specifieke ruimtes voor commissies en werkgroepen"
      },
      {
        title: "Berichtenbeheer",
        description: "Configureer vervaldata en bewerkingsrechten"
      }
    ]
  },
  {
    title: "Bestuursnieuwsfeed",
    description: "Blijf op de hoogte van belangrijke aankondigingen en updates",
    icon: "📰",
    capabilities: [
      {
        title: "Gerichte communicatie",
        description: "Deel nieuws met specifieke leden of commissies"
      },
      {
        title: "Multimedia ondersteuning",
        description: "Deel veilig afbeeldingen, documenten en links"
      },
      {
        title: "Interactieve discussies",
        description: "Reageer en discussieer veilig over updates"
      }
    ]
  },
  {
    title: "Documentdeling",
    description: "Beveiligd platform voor het delen en samenwerken aan gevoelige documenten",
    icon: "📄",
    capabilities: [
      {
        title: "Toegangsbeheer",
        description: "Gedetailleerde rechten voor inzage en bewerking"
      },
      {
        title: "Versiegeschiedenis",
        description: "Volg wijzigingen met complete audittrail"
      },
      {
        title: "Veilige weergave",
        description: "Bekijk documenten zonder download via onze beveiligde viewer"
      }
    ]
  }
];

const securityMeasures = [
  {
    icon: "🔐",
    title: "Zero-knowledge architectuur",
    description: "Uw berichten en bestanden worden versleuteld voordat ze uw apparaat verlaten, alleen ontvangers hebben toegang"
  },
  {
    icon: "🔍",
    title: "Audittrail",
    description: "Volledige traceerbaarheid van communicatie met behoud van end-to-end versleuteling"
  },
  {
    icon: "⚡",
    title: "Real-time beveiliging",
    description: "Continue monitoring en bescherming tegen ongeautoriseerde toegangspogingen"
  }
];

const testimonial = {
  quote: "De beveiligde communicatiefuncties van Govrn hebben de samenwerking binnen ons bestuur getransformeerd, met de perfecte balans tussen veiligheid en gebruiksgemak.",
  author: "Peter Hermant",
  role: "Algemeen Directeur",
  company: "Finance & Invest Brussels",
  image: "/fib-pierre.webp"
};
---

<Layout title="Beveiligde bestuurscommunicatie - Govrn" description="End-to-end versleutelde berichten en bestandsdeling voor vertrouwelijke en beschermde communicatie.">
  <main class="pt-24">
    <!-- Hero sectie -->
    <section class="relative bg-gradient-to-br from-white to-gray-50 py-32 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary/10 text-primary mb-8">
              Enterprise-grade beveiliging
            </div>
            <h1 class="text-5xl font-extrabold text-gray-900 tracking-tight mb-8">
              Vertrouwelijke en
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
                beveiligde uitwisseling
              </span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed mb-12">
              End-to-end versleutelde berichten en bestandsdeling voor vertrouwelijke en beschermde communicatie.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/request-demo"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
              >
                Demo aanvragen
              </a>
              <a
                href="/security"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
              >
                Meer over beveiliging
              </a>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-transparent rounded-3xl transform rotate-3"></div>
            <img 
  loading="lazy"
              src="/applications-picture-board-chat-mobile.png"
              alt="Beveiligde communicatie interface"
              class="relative rounded-2xl shadow-2xl w-4/6 mx-auto"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Kernfuncties -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Enterprise-grade beveiliging
          </h2>
          <p class="text-xl text-gray-600">
            Bescherm uw communicatie met onze geavanceerde beveiligingsfuncties
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600 mb-6">{feature.description}</p>
              <ul class="space-y-3">
                {feature.benefits.map(benefit => (
                  <li class="flex items-center text-gray-600">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Communicatietools -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Beveiligde communicatietools
          </h2>
          <p class="text-xl text-gray-600">
            Alles wat u nodig heeft voor veilige samenwerking
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
          {communicationTools.map(tool => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{tool.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{tool.title}</h3>
              <p class="text-gray-600 mb-8">{tool.description}</p>
              
              <div class="space-y-6">
                {tool.capabilities.map(capability => (
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">{capability.title}</h4>
                    <p class="text-gray-600 text-sm">{capability.description}</p>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Beveiligingsmaatregelen -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Ingebouwde beveiligingsmaatregelen
          </h2>
          <p class="text-xl text-gray-600">
            Meerdere beveiligingslagen om uw communicatie te beschermen
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {securityMeasures.map(measure => (
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <div class="text-3xl mb-4">{measure.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{measure.title}</h3>
              <p class="text-gray-600">{measure.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonial sectie -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-primary to-blue-600 rounded-2xl overflow-hidden">
          <div class="grid lg:grid-cols-2 gap-8 p-12">
            <div class="text-white">
              <blockquote class="text-2xl font-medium mb-8">
                "{testimonial.quote}"
              </blockquote>
              <div class="flex items-center space-x-4">
                <img 
  loading="lazy"
                  src={testimonial.image}
                  alt={testimonial.author}
                  class="w-12 h-12 rounded-full object-cover"
                />
                <div>
                  <div class="font-semibold">{testimonial.author}</div>
                  <div class="text-white/80">{testimonial.role}</div>
                  <div class="text-white/80">{testimonial.company}</div>
                </div>
              </div>
            </div>
            <div class="relative lg:text-right">
              <a
                href="/case-studies/finance-invest-brussels"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
              >
                Lees de case study
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">
          Klaar om uw communicatie te beveiligen?
        </h2>
        <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
          Sluit u aan bij toonaangevende organisaties die Govrn vertrouwen voor hun beveiligde communicatie
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
          >
            Demo aanvragen
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
          >
            Contact sales team
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>