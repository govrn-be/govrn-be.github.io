    }
    60% {
      transform: translateY(-5px);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-slide-in-right {
    animation: slideInRight 1s ease-out 0.3s both;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
