---
import Layout from '../../layouts/Layout.astro';
import ComplianceHero from '../../components/compliance/ComplianceHero.astro';
import ComplianceAnimation from '../../components/compliance/ComplianceAnimation.astro';
import ComplianceFeatures from '../../components/compliance/ComplianceFeatures.astro';
import ComplianceMetrics from '../../components/compliance/ComplianceMetrics.astro';

const testimonial = {
  quote: "Govrn's compliance dashboard has transformed how we manage regulatory requirements. The AI-powered insights help us stay ahead of changes and maintain compliance effortlessly.",
  author: "Lore Werbrouck",
  role: "General Counsel",
  company: "Van de Velde",
  image: "/vdv-lore-portrait.jpg"
};
---

<Layout title="AI-Powered Board Compliance Monitoring - Govrn" description="Govrn's AI-powered compliance dashboard helps you stay ahead of regulatory changes and maintain compliance effortlessly. See how our platform simplifies compliance tracking and reporting." >
  <main class="pt-16">
    <ComplianceHero />

    <!-- Interactive Demo Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Stay Informed, Stay Compliant
          </h2>
          <p class="text-xl text-gray-600">
            Simplify compliance and empower your board with the tools to make informed, regulation-aligned decisions.          </p>
        </div>

        <ComplianceAnimation />
      </div>
    </section>

    <ComplianceFeatures />
    
    <ComplianceMetrics />

    <!-- Testimonial Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-primary to-blue-600 rounded-2xl overflow-hidden">
          <div class="grid lg:grid-cols-2 gap-8 p-12">
            <div class="text-white">
              <blockquote class="text-2xl font-medium mb-8">
                "{testimonial.quote}"
              </blockquote>
              <div class="flex items-center space-x-4">
                <img 
  loading="lazy"
                  src={testimonial.image}
                  alt={testimonial.author}
                  class="w-12 h-12 rounded-full object-cover"
                />
                <div>
                  <div class="font-semibold">{testimonial.author}</div>
                  <div class="text-white/80">{testimonial.role}</div>
                  <div class="text-white/80">{testimonial.company}</div>
                </div>
              </div>
            </div>
            <div class="relative lg:text-right">
              <a
                href="/case-studies/van-de-velde"
                class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-primary bg-white hover:bg-gray-50 transition-colors duration-200"
              >
                Read Case Study
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">
          Ready to Simplify Your Compliance Management?
        </h2>
        <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
          Join leading organizations that trust Govrn to maintain compliance excellence
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/request-demo"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-white bg-primary hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300"
          >
            Request Demo
          </a>
          <a
            href="/contact"
            class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-xl text-gray-900 bg-white border-2 border-gray-200 hover:border-primary/20 hover:bg-gray-50 transition-colors duration-200"
          >
            Contact Sales
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>