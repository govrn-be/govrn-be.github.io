---
import Layout from '../../../layouts/Layout.astro';

const features = [
  {
    title: "Bestuur Efficiëntie",
    description: "Bestuurders besparen uren met geautomatiseerde vergadernotulen generatie",
    icon: "⏰",
    benefits: [
      "Automatische bestuurnotulen",
      "Real-time governance vastlegging",
      "Professionele corporate opmaak",
      "Klaar voor bestuurgoedkeuring"
    ]
  },
  {
    title: "Regelgevingsnaleving",
    description: "Voldoet aan alle Europese corporate governance vereisten",
    icon: "⚖️",
    benefits: [
      "AVG conforme opname",
      "Vennootschapsrecht alignment",
      "Auditklare documentatie",
      "Juridische standaard opmaak"
    ]
  },
  {
    title: "Enterprise Integratie",
    description: "Integreert naadloos met uw bestuursbeheer workflow",
    icon: "🔗",
    benefits: [
      "Bestuursportaal integratie",
      "Bestuurder agenda sync",
      "Veilige bestuurscommunicatie",
      "Governance platform compatibel"
    ]
  }
];

const workflowSteps = [
  {
    title: "Bestuursvergadering plannen",
    description: "Stel uw bestuursvergadering in op het governance platform - AI assistent voegt automatisch toe",
    icon: "🏛️",
    platforms: ["Teams", "Zoom", "Google Meet", "Webex"]
  },
  {
    title: "AI governance assistent",
    description: "Intelligente assistent voegt toe aan bestuursvergadering en begint veilige, conforme opname",
    icon: "🤖",
    features: ["AVG conform", "Bankniveau versleuteling", "Bestuurder privacy beschermd"]
  },
  {
    title: "Bestuursdiscussie vastlegging",
    description: "Bestuurders focussen op governance - AI legt alle beslissingen, moties en stemming vast",
    icon: "⚖️",
    captures: ["Bestuursbesluiten", "Stemregisters", "Strategische beslissingen", "Compliance zaken"]
  },
  {
    title: "Professionele bestuurnotulen",
    description: "Regelgeving-conforme bestuurnotulen automatisch gegenereerd in corporate taal",
    icon: "📋",
    outputs: ["Corporate governance formaat", "Juridische compliance", "Actiepunten", "Digitale goedkeuring"]
  }
];

const problemsSolved = [
  {
    problem: "Hele dag besteed aan bestuurnotulen",
    solution: "Bestuurnotulen gegenereerd in minuten",
    icon: "⚡"
  },
  {
    problem: "Gemiste bestuursbeslissingen & stemmen",
    solution: "Legt alle bestuursresoluties perfect vast",
    icon: "🎯"
  },
  {
    problem: "Handmatige bestuurtranscriptie",
    solution: "AI transcribeert vergaderingen automatisch",
    icon: "✍️"
  },
  {
    problem: "Taalbarrières in besturen",
    solution: "Europese meertalige bestuursondersteuning",
    icon: "🗣️"
  }
];
---

<Layout title="AI Bestuursvergader Notulen Generator - Automatische Bestuurnotulen - Govrn" description="Nooit meer dagen besteden aan het schrijven van bestuursvergader notulen. Govrn AI genereert automatisch uw bestuursvergader notulen in uw officiële taal, perfect voor bestuurssecretarissen.">
  <main class="pt-16">
    <!-- Hero Sectie -->
    <section class="relative min-h-[90vh] flex items-center bg-gradient-to-br from-white to-gray-50 overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(57,153,222,0.1),transparent_50%)]"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8">
            🤖 AI Bestuursvergader Notulen Generator
          </div>
          
          <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 tracking-tight mb-6 leading-tight">
            Nooit meer een dag besteden aan uw
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-blue-600">
              bestuursvergader notulen
            </span>
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-8 max-w-3xl mx-auto">
            AI genereert automatisch uw bestuursvergader notulen. 
            Perfect voor bestuurssecretarissen - vergeet nooit meer belangrijke beslissingen, geen dagen meer verloren aan schrijven. Meertalig en conform Europese standaarden.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button class="px-8 py-4 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-colors shadow-lg shadow-primary/20">
              Demo Proberen
            </button>
            <button class="px-8 py-4 bg-white text-primary border-2 border-primary/20 rounded-xl font-medium hover:bg-gray-50 transition-colors">
              Video Bekijken
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Opgeloste Problemen Sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Een einde aan bestuurnotulen problemen
          </h2>
          <p class="text-xl text-gray-600">
            AI lost al uw bestuursdocumentatie uitdagingen op voor secretarissen
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {problemsSolved.map(item => (
            <div class="text-center group">
              <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">{item.icon}</div>
              <div class="mb-4">
                <div class="text-red-600 text-sm font-medium mb-2 line-through">❌ {item.problem}</div>
                <div class="text-green-600 text-sm font-medium">✅ {item.solution}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Hoe Het Werkt Sectie -->
    <section class="py-24 bg-gray-50 relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] opacity-30"></div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8">
            Hoe het werkt
          </div>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            4 stappen naar perfecte bestuursvoering
          </h2>
          <p class="text-xl text-gray-600">
            Gestroomlijnde bestuursbeheer workflow die compliance waarborgt en bestuurders tijd bespaart
          </p>
        </div>

        <div class="relative">
          <div class="absolute top-1/2 left-0 right-0 h-0.5 bg-primary/20 hidden lg:block"></div>
          <div class="grid lg:grid-cols-4 gap-8">
            {workflowSteps.map((step, index) => (
              <div class="relative bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-primary text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-bold">
                  {index + 1}
                </div>
                <div class="text-4xl mb-6 text-center">{step.icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">{step.title}</h3>
                <p class="text-gray-600 text-center mb-6">{step.description}</p>
                
                                 {step.platforms && (
                   <div class="space-y-2">
                     <div class="text-xs font-medium text-gray-500 uppercase tracking-wide text-center">Platformen</div>
                     <div class="flex flex-wrap gap-2 justify-center">
                       {step.platforms.map(platform => (
                         <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary">
                           {platform}
                         </span>
                       ))}
                     </div>
                   </div>
                 )}
                
                {step.features && (
                  <ul class="space-y-2">
                    {step.features.map(feature => (
                      <li class="flex items-center text-sm text-gray-600">
                        <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                )}
                
                {step.captures && (
                  <ul class="space-y-2">
                    {step.captures.map(capture => (
                      <li class="flex items-center text-sm text-gray-600">
                        <svg class="h-4 w-4 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
                        </svg>
                        {capture}
                      </li>
                    ))}
                  </ul>
                )}
                
                {step.outputs && (
                  <ul class="space-y-2">
                    {step.outputs.map(output => (
                      <li class="flex items-center text-sm text-gray-600">
                        <svg class="h-4 w-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
                        </svg>
                        {output}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Meertalige Functies Sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8">
            🌍 Meertalige AI
          </div>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Notulen in de officiële taal van uw bedrijf
          </h2>
          <p class="text-xl text-gray-600">
            AI detecteert automatisch de vergadertaal en genereert notulen in perfect Frans, Engels, Duits, Spaans, Italiaans, Nederlands, en meer
          </p>
        </div>

        <!-- Taal Demo -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 mb-16">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Real-time Taal Verwerking</h3>
            <p class="text-gray-600">Zie hoe dezelfde vergaderinhoud automatisch wordt aangepast aan verschillende talen</p>
          </div>
          
          <div class="grid lg:grid-cols-2 gap-8">
            <!-- Engelse Versie -->
            <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-4 bg-gradient-to-r from-blue-500 to-red-500 rounded-sm"></div>
                  <span class="font-semibold text-gray-900">English (UK)</span>
                </div>
                <span class="text-sm text-green-600 bg-green-100 px-2 py-1 rounded-full">✓ Generated</span>
              </div>
              <div class="space-y-3">
                <div class="border-b pb-2">
                  <h4 class="font-semibold text-gray-900">Board of Directors Meeting</h4>
                  <p class="text-sm text-gray-600">15th March 2024 - Quarterly Review</p>
                </div>
                <div>
                  <h5 class="font-medium text-gray-900 mb-1">1. Financial Performance Q1 2024</h5>
                  <p class="text-sm text-gray-700">The Chief Financial Officer presented quarterly results showing a 15% increase in revenue compared to Q1 2023, reaching £12.3 million. The board approved the financial statements unanimously.</p>
                </div>
                <div>
                  <h5 class="font-medium text-gray-900 mb-1">2. Strategic Planning</h5>
                  <p class="text-sm text-gray-700">The board discussed expansion into Nordic markets with a preliminary budget allocation of £2.5 million for the initial phase.</p>
                </div>
              </div>
            </div>

            <!-- Nederlandse Versie -->
            <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-2">
                  <div class="w-6 h-4 bg-gradient-to-r from-red-500 via-white to-blue-500 rounded-sm"></div>
                  <span class="font-semibold text-gray-900">Nederlands</span>
                </div>
                <span class="text-sm text-green-600 bg-green-100 px-2 py-1 rounded-full">✓ Gegenereerd</span>
              </div>
              <div class="space-y-3">
                <div class="border-b pb-2">
                  <h4 class="font-semibold text-gray-900">Raad van Bestuur Vergadering</h4>
                  <p class="text-sm text-gray-600">15 maart 2024 - Kwartaal Review</p>
                </div>
                <div>
                  <h5 class="font-medium text-gray-900 mb-1">1. Financiële Prestaties Q1 2024</h5>
                  <p class="text-sm text-gray-700">De Chief Financial Officer presenteerde kwartaalresultaten met 15% omzetstijging vergeleken met Q1 2023, €12,3 miljoen behaald. Het bestuur keurde de financiële overzichten unaniem goed.</p>
                </div>
                <div>
                  <h5 class="font-medium text-gray-900 mb-1">2. Strategische Planning</h5>
                  <p class="text-sm text-gray-700">Het bestuur besprak uitbreiding naar Noordse markten met voorlopige budgettoewijzing van €2,5 miljoen voor de initiële fase.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Taalondersteuning Grid -->
          <div class="mt-8 grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-blue-500 via-white to-red-500 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">Français</span>
              </div>
            </div>
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-blue-500 to-red-500 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">English</span>
              </div>
            </div>
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-black via-red-500 to-yellow-400 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">Deutsch</span>
              </div>
            </div>
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-red-500 via-yellow-400 to-red-500 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">Español</span>
              </div>
            </div>
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-green-500 via-white to-red-500 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">Italiano</span>
              </div>
            </div>
            <div class="flex items-center justify-center p-3 bg-white rounded-lg border border-gray-200">
              <div class="text-center">
                <div class="w-8 h-6 bg-gradient-to-r from-red-500 via-white to-blue-500 rounded-sm mx-auto mb-2"></div>
                <span class="text-xs font-medium text-gray-700">Nederlands</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Functies Grid -->
        <div class="grid md:grid-cols-3 gap-8">
          {features.map(feature => (
            <div class="group bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="text-4xl mb-6 group-hover:scale-110 transition-transform">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.title}</h3>
              <p class="text-gray-600 mb-6">{feature.description}</p>
              <ul class="space-y-3">
                {feature.benefits.map(benefit => (
                  <li class="flex items-center text-gray-600 group-hover:text-primary transition-colors">
                    <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Interactieve Demo Sectie -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center rounded-full px-4 py-1.5 text-sm font-medium bg-primary/10 text-primary mb-8">
            🎯 Interactieve Demo
          </div>
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            Ervaar de Notulen Generator
          </h2>
          <p class="text-xl text-gray-600">
            Zie hoe hoofdstukken, transcript en AI samenwerken om perfecte notulen te creëren
          </p>
        </div>

        <!-- Demo Interface -->
        <div class="bg-white rounded-xl shadow-2xl border border-gray-200 overflow-hidden">
          <!-- Header Bar -->
          <div class="flex items-center justify-between p-4 bg-gray-50 border-b border-gray-200">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <div class="text-sm font-medium text-gray-600">Q1 2024 Bestuursvergadering - Notulen Generator</div>
            <div class="flex space-x-2">
              <button class="px-4 py-1 text-xs bg-blue-100 text-blue-700 rounded-full font-medium">Opslaan</button>
              <button class="px-4 py-1 text-xs bg-green-100 text-green-700 rounded-full font-medium">Publiceren</button>
              <button class="px-4 py-1 text-xs bg-purple-100 text-purple-700 rounded-full font-medium">Exporteren DOCX</button>
            </div>
          </div>

          <div class="grid lg:grid-cols-3 gap-0 min-h-[600px]">
            <!-- Editor Paneel -->
            <div class="lg:col-span-2 p-6 border-r border-gray-200">
              <div class="space-y-6">
                <div class="border-b pb-4">
                  <h3 class="font-bold text-xl text-gray-900">Raad van Bestuur Vergadering</h3>
                  <p class="text-gray-600 mt-1">15 maart 2024 - 14:00 CET</p>
                  <p class="text-gray-600">Aanwezig: Jan de Vries (Voorzitter), Alice Jansen (CEO), Robert van der Berg (CFO)</p>
                  <p class="text-gray-600 text-sm">Secretaris: AI Assistent</p>
                </div>
                
                <div class="space-y-4">
                  <div class="group hover:bg-blue-50 p-3 rounded-lg transition-colors cursor-pointer border border-transparent hover:border-blue-200">
                    <h4 class="font-semibold text-gray-900 group-hover:text-blue-900">1. Opening en Aanwezigheid</h4>
                    <p class="text-gray-600 text-sm mt-1">De Voorzitter opende de bestuursvergadering om 14:00. Alle bestuursleden waren aanwezig. De agenda werd unaniem goedgekeurd.</p>
                    <div class="mt-2 flex items-center space-x-2">
                      <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">📍 2:15</span>
                      <span class="text-xs text-green-600">✓ Gegenereerd uit hoofdstuk</span>
                    </div>
                  </div>
                  
                  <div class="group hover:bg-blue-50 p-3 rounded-lg transition-colors cursor-pointer border border-transparent hover:border-blue-200">
                    <h4 class="font-semibold text-gray-900 group-hover:text-blue-900">2. Financiële Review Q1 2024</h4>
                    <p class="text-gray-600 text-sm mt-1">De CFO presenteerde de kwartaalresultaten aan het bestuur met 15% omzetgroei vergeleken met Q1 2023. Het bestuur beoordeelde en keurde de financiële overzichten goed.</p>
                    <div class="mt-2 flex items-center space-x-2">
                      <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">📍 8:30</span>
                      <span class="text-xs text-green-600">✓ Gegenereerd uit hoofdstuk</span>
                    </div>
                  </div>

                  <div class="group hover:bg-blue-50 p-3 rounded-lg transition-colors cursor-pointer border border-transparent hover:border-blue-200">
                    <h4 class="font-semibold text-gray-900 group-hover:text-blue-900">3. Strategische Initiatieven 2024</h4>
                    <p class="text-gray-600 text-sm mt-1">Bestuursdiscussie over uitbreiding naar Noordse markten. Motie om voorlopige budgettoewijzing van €2,5M goed te keuren werd met meerderheid aangenomen...</p>
                    <div class="mt-2 flex items-center space-x-2">
                      <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">📍 15:45</span>
                      <span class="text-xs text-orange-600">⏳ Wordt gegenereerd...</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Zijbalk met Tabs -->
            <div class="bg-gray-50">
              <!-- Tab Navigatie -->
              <div class="border-b border-gray-200">
                <nav class="flex">
                  <button class="flex-1 px-4 py-3 text-sm font-medium text-blue-600 border-b-2 border-blue-500 bg-white">
                    Hoofdstukken <span class="ml-1 text-xs bg-blue-100 text-blue-800 px-2 py-0.5 rounded-full">3</span>
                  </button>
                  <button class="flex-1 px-4 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-100 transition-colors">
                    Transcript
                  </button>
                </nav>
              </div>

              <!-- Hoofdstukken Tab Inhoud -->
              <div class="p-4 space-y-3 h-[550px] overflow-y-auto">
                <div class="space-y-2">
                  <div class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full inline-flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                    AI Gegenereerde Hoofdstukken
                  </div>
