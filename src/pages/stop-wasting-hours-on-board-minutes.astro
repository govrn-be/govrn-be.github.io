<script>
  function calculateEnhanced() {
    const yearlyMeetings = parseInt((document.getElementById('meetings') as HTMLInputElement)?.value) || 0;
    const hoursPerMeeting = parseInt((document.getElementById('hours-per-meeting') as HTMLInputElement)?.value) || 0;
    
    const monthlyMeetings = (yearlyMeetings / 12).toFixed(1);
    const monthlyHours = (yearlyMeetings / 12) * hoursPerMeeting;
    const yearlyHours = yearlyMeetings * hoursPerMeeting;
    
    // 60% time savings
    const savedMonthly = monthlyHours * 0.6;
    const savedYearly = yearlyHours * 0.6;
    
    // Breakdown calculation (rough estimates)
    const prepHours = Math.round(hoursPerMeeting * 0.3);
    const minutesHours = Math.round(hoursPerMeeting * 0.4);
    const followupHours = Math.round(hoursPerMeeting * 0.3);
    
    // Calculate days saved (assuming 8-hour workdays)
    const daysSaved = (savedYearly / 8).toFixed(0);
    
    // Update display values
    const meetingsDisplayEl = document.getElementById('meetings-display');
    const meetingsMonthlyEl = document.getElementById('meetings-monthly');
    const hoursDisplayEl = document.getElementById('hours-display');
    const breakdownEl = document.getElementById('breakdown');
    const totalHoursEl = document.getElementById('total-hours');
    const savedHoursEl = document.getElementById('saved-hours');
    const yearlySavedDaysEl = document.getElementById('yearly-saved-days');
    
    if (meetingsDisplayEl) meetingsDisplayEl.textContent = yearlyMeetings.toString();
    if (meetingsMonthlyEl) meetingsMonthlyEl.textContent = monthlyMeetings;
    if (hoursDisplayEl) hoursDisplayEl.textContent = hoursPerMeeting.toString();
    if (breakdownEl) breakdownEl.textContent = `~${prepHours}h prep + ${minutesHours}h minutes + ${followupHours}h follow-up`;
    if (totalHoursEl) totalHoursEl.textContent = Math.round(monthlyHours).toString();
    if (savedHoursEl) savedHoursEl.textContent = savedMonthly.toFixed(1);
    if (yearlySavedDaysEl) yearlySavedDaysEl.textContent = daysSaved + " extra days";
  }
  
  // Add event listeners for sliders
  ['meetings', 'hours-per-meeting'].forEach(id => {
    const element = document.getElementById(id);
    if (element) {
      element.addEventListener('input', calculateEnhanced);
    }
  });

  // Calculate on page load
  document.addEventListener('DOMContentLoaded', calculateEnhanced);
</script>

