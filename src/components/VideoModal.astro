---
interface Props {
  videoId: string;
}

const { videoId } = Astro.props;
---
<div id="videoModal" class="fixed inset-0 z-50 hidden">
  <div class="absolute inset-0 bg-black/75 backdrop-blur-sm"></div>
  <div id="videoModalYoutube" class="absolute inset-0 flex items-center justify-center p-4" style="display: none;">
    <div class="relative w-full max-w-4xl mx-auto">
      <div class="relative pt-[56.25%]">
        <iframe
          id="youtubePlayer"
          class="absolute inset-0 w-full h-full rounded-xl"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          data-src={`https://www.youtube.com/embed/${videoId}?enablejsapi=1`}
          style="display: none;"
        ></iframe>
      </div>
      <button
        id="closeVideoModal"
        class="absolute -top-12 right-0 text-white hover:text-gray-300 transition-colors"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('videoModal');
  const modalYoutube = document.getElementById('videoModalYoutube');
  const closeBtn = document.getElementById('closeVideoModal');
  const iframe = document.getElementById('youtubePlayer');

  let isLoaded = false;

  function openModal() {
    modal.classList.remove('hidden');
    modalYoutube.style.display = 'flex';
    iframe.style.display = 'block';
    document.body.style.overflow = 'hidden';

    // Lazy-load YouTube only once
    if (!isLoaded) {
      iframe.src = iframe.dataset.src;
      isLoaded = true;
    }
  }

  function closeModal() {
    modal.classList.add('hidden');
    modalYoutube.style.display = 'none';
    document.body.style.overflow = '';

    // Stop video
    if (iframe?.contentWindow) {
      iframe.contentWindow.postMessage(
        '{"event":"command","func":"stopVideo","args":""}',
        '*'
      );
    }
  }

  // Export global function
  window.openVideoModal = openModal;

  closeBtn?.addEventListener('click', closeModal);

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
</script>