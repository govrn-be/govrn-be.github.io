    </section>

    <!-- Social proof sectie -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">Zij vertrouwen op ons</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-8 items-center opacity-70">
            <img 
  loading="lazy"
              src="/vdv-logo.png"
              alt="Van de Velde"
              class="h-24 object-contain mx-auto"
            />
            <img 
  loading="lazy"
              src="/fib-logo.png"
              alt="Finance & Invest Brussels"
              class="h-24 object-contain mx-auto"
            />
